<body class="top-page">
  <section class="top-page__section">
  <div class="top-page__main-title">
    <h2 class="top-page__title">
    <p class="top-page__furigana-do"> ドゥ</p>
    <p class="top-page__furigana-switch"> スイッチ</p>
    <span>D</span>ooo<span>S</span>witch
    </h2>
    <p class="top-page__app-discription">〜行動計測アプリ〜</p>
    </div>
    <nav class="nav">
    <ul>
            <% if user_signed_in? %>
          <%= link_to "トップ", root_path, class: "btn btn-default" %>
          <%= link_to "アクションカスタマイズ", user_verbs_path(user_id: current_user.id), class: "btn btn-default" %>
          <%= link_to "学習計画", user_plan_allots_path(user_id: current_user.id), class: "btn btn-default" %>
          <%= link_to "実績", user_achieve_records_path(user_id: current_user.id), class: "btn btn-default" %>
          <%= link_to "アバウト", about_path, class: "btn btn-default" %>
          <%= link_to "ユーザー設定", edit_user_path(current_user), class: "btn btn-default" %>
          <%= link_to "ログアウト",destroy_user_session_path, method: :delete, data: { confirm: 'ログアウトしますか？' }, class: "btn btn-default" %>
        <% end %>
        <div id="flash_messages">
          <%= render "layouts/flash_messages" %>
        </div>
        </ul>
    </nav>
    <div class="prioritize-action">
      <h3 class="prioritize-action__title">
        【最優先アクション】
      </h3>
      <div class="prioritize-action__list">
      <ul class="prioritize-action__list-ul">
      <% @important_verbs.each do |verb| %>
      <li class="prioritize-action__item">
        <p class="prioritize-action__actName">
          <%= verb.name %>
        </p>
            <div class="prioritize-action__doswitch">
              <div class="prioritize-action__doswitchStandTop">
                <%# <%= record_toggle(verb) %> 
                <div class="prioritize-action__doswitch-body">
                    <div class="prioritize-action__doswitch-body-a"></div>
                    <div class="prioritize-action__doswitch-body-b"></div>
                </div> 
              </div>
              <div class="prioritize-action__doswitchStandBody">
              </div>
            </div>
    <%#    <%= record_toggle(verb) %> 

        <%# <%= plan_time(verb) %>
        <%# <%= plan_clear(verb) %> 
        </li>
      <% end %>
      </ul>
      </div>
    </div>
    <div class="setup-action">
      <h3 class="setup-action__title">
        【設定中アクション】
      </h3>
      <p class="setup-action__now-time"></p>
      <div class="setup-action__list">
        <ul class="setup-action__list-ul">
          <% @selected_verbs.each do |verb| %>
          <li class="setup-action__item">
            <p class="setup-action__actName">
              <%= verb.name %>
            </p>
            <div class="setup-action__doswitch">
              <div class="setup-action__doswitchStandTop">
                <%= record_toggle(verb) %>
              </div>
              <div class="setup-action__doswitchStandBody">
              </div>
            </div>
            <%# record_toggle(verb) %>
            <%# <%= plan_time(verb) %>
          </li>
          <% end %>
      </div>
  </section>
</body>
